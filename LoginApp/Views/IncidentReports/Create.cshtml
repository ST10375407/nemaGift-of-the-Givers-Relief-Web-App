@model LoginApp.Models.IncidentReport

@{
    ViewData["Title"] = "Report Incident";
}

<h2 class="text-center text-pink display-5">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="p-4 border rounded shadow" style="background-color:#ffe6f0;">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="Title" class="fw-bold text-purple"></label>
        <input asp-for="Title" class="form-control border-pink" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="fw-bold text-purple"></label>
        <textarea asp-for="Description" class="form-control border-pink"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Location" class="fw-bold text-purple"></label>
        <input asp-for="Location" class="form-control border-pink" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-pink me-2">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    .text-pink {
        color: #ff3399;
    }

    .text-purple {
        color: #800080;
    }

    .border-pink {
        border: 2px solid #ff3399;
    }

    .btn-pink {
        background-color: #ff3399;
        color: white;
    }

        .btn-pink:hover {
            background-color: #e6007e;
        }
</style>
