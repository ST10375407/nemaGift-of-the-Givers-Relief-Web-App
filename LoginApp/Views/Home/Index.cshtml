@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-column justify-content-center align-items-center min-vh-100" style="background-color:#ffe6f0;">
    <div class="text-center p-5 shadow-lg rounded bg-white" style="max-width:650px; width:100%;">
        <h1 class="display-3 fw-bold mb-4 text-pink" style="color:#e91e63;">The Gift of the Givers Foundation</h1>

        @if (Context.Session.GetString("UserEmail") != null)
        {
            <div class="alert alert-success mt-4">
                <h4 class="alert-heading">You are logged in!</h4>
                <p><strong>Email:</strong> @Context.Session.GetString("UserEmail")</p>
                <p><strong>Name:</strong> @Context.Session.GetString("UserName")</p>
                <hr>
                <p class="mb-0"><strong>Last Login:</strong> @DateTime.Now.ToString("f")</p>
            </div>
        }
        else
        {
            <p class="lead mb-4" style="font-size:1.2rem;">Please login or register to join our mission and contribute to relief efforts.</p>

            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Account" asp-action="Login" class="btn btn-lg" style="background-color:#e91e63; color:white; font-weight:bold; padding:0.7rem 2rem;">Login</a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-lg" style="background-color:#ff4081; color:white; font-weight:bold; padding:0.7rem 2rem;">Register</a>
            </div>
        }
    </div>
</div>
